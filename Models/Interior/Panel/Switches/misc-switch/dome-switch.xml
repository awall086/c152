<?xml version="1.0"?>

<PropertyList>

 <path>misc-switch.ac</path>
    
<!--	dome Lights switch		-->
    <animation>
        <type>rotate</type>
        <object-name>misc-switch</object-name>
        <property>/controls/lighting/int-lights</property>
        <factor>-37</factor>
        <axis>
            <x>0.0</x>
            <y>1.0</y>
            <z>0.0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>misc-switch</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>/controls/lighting/int-lights</property>
            </binding>
            <binding>
                <command>nasal</command>
                <script>c152.click("taxi-light")</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>Dome-switch</tooltip-id>
                <label>Dome Light: %s</label>
                <mapping>on-off</mapping>
                <property>/controls/lighting/int-lights</property>
            </binding>
        </hovered>
    </animation>
</PropertyList>


