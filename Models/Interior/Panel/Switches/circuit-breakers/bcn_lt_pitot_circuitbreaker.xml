<?xml version="1.0"?>

<PropertyList>

	<path>circuitbreaker5.ac</path>

<!--	Beacon light and pitot circuit breaker		-->
    <animation>
        <type>translate</type>
        <object-name>circuitbreaker</object-name>
        <property>/controls/circuit-breakers/beacon_pitot</property>
        <factor>-0.005</factor>
        <axis>
            <x>1.0</x>
            <y>0.0</y>
            <z>0.0</z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>circuitbreaker</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>/controls/circuit-breakers/beacon_pitot</property>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>bcn_pitot_breaker</tooltip-id>
                <label>Beacon light and pitot heat breaker: %s</label>
                <mapping>on-off</mapping>
                <property>/controls/circuit-breakers/beacon_pitot</property>
            </binding>
        </hovered>
    </animation>
</PropertyList>


