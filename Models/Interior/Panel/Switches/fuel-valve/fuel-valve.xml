<!--	fuel valve		-->
<animation>
    <type>rotate</type>
    <object-name>fuel-valve</object-name>
    <property>/controls/fuel/fuel-on</property>
    <factor>-90</factor>
    <axis>
        <x>0.0</x>
        <y>0.0</y>
        <z>1.0</z>
    </axis>
    <center>
        <x-m>0</x-m>
        <y-m>0</y-m>
        <z-m>0</z-m>
    </center>
</animation>
<animation>
   <type>pick</type>
   <object-name>fuel-valve</object-name>
   <visible>true</visible>
   <action>
     <button>0</button>
     <repeatable>false</repeatable>
     <binding>
       <command>property-toggle</command>
    	<property>/controls/fuel/fuel-on</property>
     </binding>
   </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>Fuel Valve</tooltip-id>
      <label>Fuel Valve: %s</label>
      <mapping>on-off</mapping>
    <property>/controls/fuel/fuel-on</property>
   </binding>
   </hovered>
</animation>        

</PropertyList>


