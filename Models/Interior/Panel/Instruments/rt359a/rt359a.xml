    <animation>
        <type>rotate</type>
        <object-name>Knob_digit_1</object-name>
        <property>instrumentation/transponder/inputs/digit[0]</property>
        <factor>10</factor>
        <center>
			<x-m>0.01360</x-m>
			<y-m>0.07037</y-m>
			<z-m>-0.00462</z-m>
        </center>
        <axis>
