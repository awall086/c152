        <property>instrumentation/transponder/inputs/digit[2]</property>
        <factor>10</factor>
        <center>
           <x-m>0.01360</x-m>
           <y-m>0.00523</y-m>
           <z-m>-0.00462</z-m>
        </center>
        <axis>
            <x> -1 </x>
            <y>  0 </y>
            <z>  0 </z>
