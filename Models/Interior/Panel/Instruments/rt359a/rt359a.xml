<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>

   <path>rt359a.ac</path>

    <animation>
        <type>material</type>
            <object-name>Digit_1000</object-name>
            <object-name>Digit_100</object-name>
            <object-name>Digit_10</object-name>
            <object-name>Digit_1</object-name>
        <emission>
            <red>0.98</red>
            <green>0.51</green>
            <blue>0.0</blue>
            <factor-prop>/sim/model/c152/lighting/radio</factor-prop>
        </emission>
    </animation>

<!--    Active Frequency   -->

    <animation>
        <type>textranslate</type>
        <object-name>Digit_1000</object-name>
        <property>instrumentation/transponder/inputs/digit[3]</property>
        <factor>0.1</factor>
        <step>1</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>Digit_100</object-name>
        <property>instrumentation/transponder/inputs/digit[2]</property>
