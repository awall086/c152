<?xml version="1.0"?>

<PropertyList>

 <path>oil.ac</path>

    <effect>
        <inherits-from>Aircraft/c152/Models/Effects/interior/c152-interior-compartment</inherits-from>
        <object-name>Oil_base</object-name>
        <object-name>OilPressNeedle</object-name>
        <object-name>OilTempNeedle</object-name>
    </effect>

 <animation>
  <type>material</type>
  <object-name>Oil_base</object-name>
  <object-name>OilPressNeedle</object-name>
  <object-name>OilTempNeedle</object-name>
  <emission>
   <red>0.98</red>
   <green>0.51</green>
   <blue>0.0</blue>
   <factor-prop>/sim/model/c152/lighting/instruments</factor-prop>
  </emission>
 </animation>

<animation>
  <type>rotate</type>
  <object-name>OilTempNeedle</object-name>
  <property>engines/engine/oil-temperature-degf</property>
  <interpolation>
   <entry>
    <ind>0</ind>
    <dep>-38</dep>
   </entry>
   <entry>
    <ind>100</ind>
    <dep>-38</dep>
   </entry>
   <entry>
    <ind>180</ind>
    <dep>4</dep>
   </entry>
   <entry>
    <ind>245</ind>
    <dep>40</dep>
   </entry>
  </interpolation>
  <center>
   <x-m>0.000</x-m>
   <y-m>-0.020</y-m>
   <z-m>-0.011</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 
 <animation>
  <type>rotate</type>
  <object-name>OilPressNeedle</object-name>
  <property>engines/engine/oil-pressure-psi</property>
  <interpolation>
   <entry>
    <ind>0</ind>
    <dep>-44</dep>
   </entry>
   <entry>
    <ind>25</ind>
    <dep>-21</dep>
   </entry>
   <entry>
    <ind>60</ind>
    <dep>10</dep>
   </entry>
   <entry>
    <ind>90</ind>
    <dep>22</dep>
   </entry>
   <entry>
    <ind>115</ind>
    <dep>42</dep>
   </entry>
  </interpolation>
  <center>
   <x-m>0.000</x-m>
   <y-m>0.020</y-m>
   <z-m>-0.011</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

</PropertyList>


