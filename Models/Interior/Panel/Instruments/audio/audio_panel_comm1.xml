<?xml version="1.0"?>
<PropertyList>

    <params>
        <com1>instrumentation/audio/com1</com1>
    </params>

    <path>audio_switch.ac</path>

    <animation>
        <type>knob</type>
        <object-name>audio_switch</object-name>
        <drag-direction>vertical</drag-direction>
        <drag-scale-px>30</drag-scale-px>
        <property alias="../../params/com1"/>
        <factor>30</factor>
        <axis>
            <y>1</y>
        </axis>
        <center>
            <x-m>0.0</x-m>
            <z-m>0.0</z-m>
        </center>
        <action>
            <binding>
                <command>property-adjust</command>
                <property alias="../../../../params/com1"/>
                <factor>-1</factor>
                <min>-1</min>
                <max>1</max>
                <wrap>0</wrap>
            </binding>
            <binding>
                <command>nasal</command>
                <script>c152.click("audio")</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>audio-com1</tooltip-id>
                <property alias="../../../../params/com1"/>
                <label>COM1: %s</label>
                <mapping>nasal</mapping>
                <script>(arg[0] == -1) ? "SPEAKER" : (arg[0]==1) ? "HEADSET" : "OFF"</script>
            </binding>
        </hovered>
    </animation>

</PropertyList>
