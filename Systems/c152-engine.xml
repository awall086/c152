<system name="engine">

    <channel name="oil">
    
        <fcs_function name="consumed-oil-weight">
            <function>
                <product>
                    <property>/engines/active-engine/oil-lacking</property>
                    <value>1.7686</value>
                    <value>-1</value>
                </product>
            </function>
            <output>/fdm/jsbsim/inertia/pointmass-weight-lbs[16]</output>
        </fcs_function>
        
    </channel>
    
    <channel name="carburetor">
    
        <fcs_function name="Carb heat on causes RPM drop on 110 HP engine">
            <function>
                <ifthen>
                    <property>/controls/anti-ice/engine/carb-heat</property>
                    <value>0.475</value>
                    <value>0.15185</value>
                </ifthen>
            </function>
            <output>/fdm/jsbsim/propulsion/engine/air-intake-impedance-factor</output>
        </fcs_function>
               
    </channel>
    
</system>
