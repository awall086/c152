<PropertyList>

    <name>aircraft-config-init</name>
    <layout>vbox</layout>
    <pref-width>260</pref-width>

    <group>
        <layout>hbox</layout>
        <text>
            <halign>left</halign>
            <label>Cessna 152 is loading...</label>
        </text>
    </group>

    <hrule/>
	
    <group>
	<layout>vbox</layout>
        <text>
            <halign>left</halign>
            <label>Please wait...</label>
        </text>
    </group>
    <group>
	<layout>table</layout>
	<halign>left</halign>
	<text>
	    <row>0</row>
	    <col>0</col>
	    <halign>left</halign>
	    <label>                          </label>
	</text>
        <text>
	    <row>0</row>
	    <col>1</col>
	    <halign>left</halign>
	    <border>1</border>
            <property>/systems/acconfig/spin</property>
            <live>1</live>
        </text>	
    </group>
	
</PropertyList>
