<PropertyList>

    <sim>
        <description>Cessna 152 (1978)</description>
         <long-description>The Cessna 152 is a two-seat, single-engine, high-wing fixed-wing aircraft. First flown in 1977. A total of 7582 units was produced until 1985, when Cessna was ended production of their light aircrafts.</long-description>
   
         <es>
            <long-description>El Cessna 152 es un avion monomotor, de ala alta. Realizó su primer vuelo en 1977. Se construyeron un total de 7582 unidades hasta 1985, cuando Cessna finalizao la produccion de sus aviones ligeros.</long-description>
        </es>

        <tags>
            <tag>ga</tag>
            <tag>cessna</tag>
            <tag>piston</tag>
            <tag>single-engine</tag>
            <tag>fixed-gear</tag>
        </tags>
  
        <author>awall86 (Adrian Fernandez Gomez), gsagostinho (Gilberto Agostinho), wlbragg (Wayne Bragg)
        A special thanks to Octal450 (Josh Davidson) for his excelent Aircraft Configuration Utility</author>
        <status>beta</status>
        <aircraft-version>2024.9.11B</aircraft-version>
        <minimum-fg-version>2024.1.1</minimum-fg-version>

  
        <rating>
            <FDM type="int">3</FDM>
            <systems type="int">3</systems>
            <model type="int">4</model>
            <cockpit type="int">4</cockpit>
        </rating>

        <flight-model archive="y">jsb</flight-model>
        <aero archive="y">c152</aero>
  
        <model>
            <path archive="y">Aircraft/c152/Models/c152.xml</path>   

            <!-- Default livery -->
            <livery>
                <name type="string">N80271</name>
            </livery>

            <c152>
				<nw_fairing type="bool">false</nw_fairing>
				<mw_fairing type="bool">false</mw_fairing>
				<sun_visor_l type="double">0.0</sun_visor_l>
				<sun_visor_r type="double">0.0</sun_visor_r>              
				<garmin196-visible type="bool">false</garmin196-visible>
				<kn62a-visible type="bool">false</kn62a-visible>
				<lighting>
					<taxi type="bool">false</taxi>
					<landing type="bool">false</landing>
					<beacon>
						<enabled type="bool">true</enabled>
					</beacon>
					<strobe>
						<enabled type="bool">true</enabled>
					</strobe>
					<gps-norm type="float">0</gps-norm>
				</lighting>
                 <!-- Event sounds -->
				<sound>
					<click-master-bat type="bool">false</click-master-bat>
					<click-master-alt type="bool">false</click-master-alt>
					<click-landing-light type="bool">false</click-landing-light>
					<click-taxi-light type="bool">false</click-taxi-light>
					<click-nav-lights type="bool">false</click-nav-lights>
					<click-strobe type="bool">false</click-strobe>
					<click-beacon type="bool">false</click-beacon>
					<click-pitot-heat type="bool">false</click-pitot-heat>
					<click-magneto-forward type="bool">false</click-magneto-forward>
					<click-magneto-back type="bool">false</click-magneto-back>
					<click-flaps type="bool">false</click-flaps>
				</sound>
				<instrumentation>
					<vor2_installed type="bool">false</vor2_installed>
				</instrumentation>
            </c152>

            <crew>
                <pilot n="0">
                    <pose include="Models/Human/pose-pilot.xml"/>
                    <character>0</character>
                    <outfit>0</outfit>
                    <equipment>0</equipment>
                </pilot>
                <pilot n="1">
                    <pose include="Models/Human/pose-copilot.xml"/>
                    <character>0</character>
                    <outfit>0</outfit>
                    <equipment>0</equipment>
                </pilot>
            </crew> 

            <!-- Human models persistent menu choice -->
            <occupants type="bool">true</occupants>

		</model>

        <gui n="0" include="gui/c152-gui.xml"/>

        <menubar include="gui/dialogs/c152-menu.xml"/>

	<!-- position the pilot viewpoint and angle -->
 
        <view>
            <internal type="bool" archive="y">true</internal>
            <config>
                <x-offset-m archive="y" type="double">-0.25</x-offset-m>
                <y-offset-m archive="y" type="double">0.390</y-offset-m>
                <z-offset-m archive="y" type="double">2.56</z-offset-m>
                <pitch-offset-deg type="double">-5</pitch-offset-deg>
				<default-field-of-view-deg>65</default-field-of-view-deg> 
			</config>
        </view>
  
        <view n="1">
            <config>
                <target-z-offset-m archive="y" type="double"> 2 </target-z-offset-m>
            </config>
        </view>

        <view n="2">
            <config>
                <target-z-offset-m archive="y" type="double"> 2 </target-z-offset-m>
            </config>
        </view>

        <view n="3">
            <config>
                <target-z-offset-m archive="y" type="double"> 2 </target-z-offset-m>
            </config>
        </view>

        <view n="4">
            <config>
                <target-z-offset-m archive="y" type="double"> 2 </target-z-offset-m>
            </config>
        </view>

        <view n="5">
            <config>
                <target-z-offset-m archive="y" type="double"> 2 </target-z-offset-m>
            </config>
        </view>

        <view n="6">
            <config>
                <target-z-offset-m archive="y" type="double"> 2 </target-z-offset-m>
            </config>
        </view>

        <key n="96">
            <name>Backtick</name>
            <desc>Open marker adjust dialog</desc>
            <binding>
                <command>dialog-show</command>
                <dialog-name>marker-adjust</dialog-name>
            </binding>
        </key>

        <!-- Splash screens. One is randomly chosen when FlightGear starts -->
        <previews>
            <preview>
                <type>exterior</type>
                <path>Previews/c152-preview0.jpg</path>
                <splash type="bool">true</splash>
            </preview>
            <preview>
                <type>cockpit</type>
                <path>Previews/c152-preview1.jpg</path>
                <splash type="bool">true</splash>
            </preview>
            <preview>
                <type>exterior</type>
                <path>Previews/c152-preview2.jpg</path>
                <splash type="bool">true</splash>
            </preview>
            <preview>
                <type>exterior</type>
                <path>Previews/c152-preview3.jpg</path>
                <splash type="bool">true</splash>
            </preview>
            <preview>
                <type>cockpit</type>
                <path>Previews/c152-preview4.jpg</path>
                <splash type="bool">true</splash>
            </preview>
            <preview>
                <type>exterior</type>
                <path>Previews/c152-preview5.jpg</path>
                <splash type="bool">true</splash>
            </preview>
            <preview>
                <type>exterior</type>
                <path>Previews/c152-preview6.jpg</path>
                <splash type="bool">true</splash>
            </preview>
            <preview>
                <type>exterior</type>
                <path>Previews/c152-preview7.jpg</path>
                <splash type="bool">true</splash>
            </preview>
            <preview>
                <type>exterior</type>
                <path>Previews/c152-preview8.jpg</path>
                <splash type="bool">true</splash>
            </preview>
            <preview>
                <type>exterior</type>
                <path>Previews/c152-preview9.jpg</path>
                <splash type="bool">true</splash>
            </preview>
            <preview>
                <type>cockpit</type>
                <path>Previews/c152-preview10.jpg</path>
                <splash type="bool">true</splash>
            </preview>
            <preview>
                <type>exterior</type>
                <path>Previews/c152-preview11.jpg</path>
                <splash type="bool">true</splash>
            </preview>
            <preview>
                <type>cockpit</type>
                <path>Previews/c152-preview12.jpg</path>
                <splash type="bool">true</splash>
            </preview>
            <preview>
                <type>exterior</type>
                <path>Previews/c152-preview13.jpg</path>
                <splash type="bool">true</splash>
            </preview>
            <preview>
                <type>exterior</type>
                <path>Previews/c152-preview14.jpg</path>
                <splash type="bool">true</splash>
            </preview>>
        </previews>

        <systems>
			<path>Aircraft/c152/Systems/systems.xml</path>
		
            <property-rule n="100">
                <path archive="y">Aircraft/c152/Systems/engine.xml</path>
            </property-rule>
            
			<property-rule n="101">
                <name>FiltersOnly</name>
                <path>Systems/instruments.xml</path>
            </property-rule>

            <property-rule n="102">
                <path archive="y">Aircraft/c152/Systems/lights.xml</path>
            </property-rule>

            <property-rule n="103">
                <path>Aircraft/c152/Systems/ground-effects.xml</path>
            </property-rule>

            <property-rule n="104">
                <path archive="y">Aircraft/c152/Systems/pax.xml</path>
            </property-rule>

            <autopilot n="0">
                <path archive="y">Aircraft/c152/Systems/glass-rain.xml</path>
            </autopilot>
		</systems>

        <checklists include="c152-checklists.xml"/>          

        <sound>
            <path archive="y">c152-sound.xml</path>
        </sound>
 
         <rendering>
            <shadow-volume type="bool">true</shadow-volume>
        </rendering>

		<chocks>
			<enable type="bool">false</enable>
		</chocks>
  
        <multiplay>
            <generic>
                <float n="0" alias="/sim/model/door-positions/rightDoor/position-norm-effective"/>
                <float n="1" alias="/sim/model/door-positions/leftDoor/position-norm-effective"/>
				<float n="2" alias="/sim/model/door-positions/leftWindow/position-norm"/>
                <float n="3" alias="/sim/model/door-positions/rightWindow/position-norm"/>
				<float n="4" alias="/sim/model/door-positions/gloveboxDoor/position-norm"/>
            </generic>
        </multiplay>
 
    </sim>

    <input>
        <keyboard include="c152-keyboard.xml"/>
    </input>

    <fdm>
        <jsbsim>
            <propulsion>
                <tank n="1">
                    <collector-valve type="int">0</collector-valve>
                </tank>
                <tank n="2">
                    <collector-valve type="int">0</collector-valve>
                </tank>
            </propulsion>
        </jsbsim>
    </fdm>

    <controls>
        <flight>
            <rudder-trim type="double">0.0</rudder-trim>
        </flight>

        <fuel>
            <fuel-on type="int">0</fuel-on>
        </fuel>
		
        <engines>
            <engine n="0">
                <magnetos type="int">0</magnetos>
				<primer type="double">0</primer>
                <primer-lever type="bool">false</primer-lever>
                <use-primer type="bool">false</use-primer>
                <master-bat type="bool">false</master-bat>
                <master-alt type="bool">false</master-alt>
                <mixture type="double">0</mixture>
            </engine>   
        </engines>

        <lighting>
            <landing-lights type="bool">false</landing-lights>
            <taxi-light type="bool">false</taxi-light>
            <strobe type="bool">false</strobe>
            <beacon type="bool">false</beacon>
            <nav-lights type="bool">false</nav-lights>
            <nav-lights-switch type="bool">false</nav-lights-switch>
			<int-lights type="bool">false</int-lights>
        </lighting>

        <gear>
            <brake-parking type="bool">true</brake-parking>
        </gear>

		<switches>
            <master-bat type="bool">false</master-bat>
			<master-avionics type="bool">false</master-avionics>
            <master-alt type="bool">false</master-alt>
            <magnetos type="double">0</magnetos>
			<starter type="bool">false</starter>
		</switches>

		<circuit-breakers>
			<fuel_ind type="bool">true</fuel_ind>
			<beacon_pitot type="bool">true</beacon_pitot>
			<strobe_lt type="bool">true</strobe_lt>
			<landing_lt type="bool">true</landing_lt>
			<flaps type="bool">true</flaps>
			<instr_lt type="bool">true</instr_lt>
			<nav_lt type="bool">true</nav_lt>
			<radio1 type="bool">true</radio1>
			<radio2 type="bool">true</radio2>
			<radio3 type="bool">true</radio3>			
		</circuit-breakers>
    </controls>

    <consumables>
        <fuel>
            <tank n="0">
                <name type="string">carb Bowl</name>
            </tank>
            
            <tank n="1">
                <name type="string">Left Wing</name>
                <capacity-gal_us type="double">13.0</capacity-gal_us>
                <unusable-gal_us type="double">0.75</unusable-gal_us>
                <level-gal_us type="double">10</level-gal_us>
            </tank>

           <tank n="2">
               <name type="string">Right Wing</name>
               <capacity-gal_us type="double">13.0</capacity-gal_us>
               <unusable-gal_us type="double">0.75</unusable-gal_us>
               <level-gal_us type="double">10</level-gal_us>
           </tank>
        </fuel>
    </consumables>

    <nasal>
        <c152>
            <file>Nasal/c152.nas</file>
            <file>Nasal/liveries.nas</file>
			<file>Nasal/engine.nas</file>
            <file>Nasal/light-manager.nas</file>
            <file>Nasal/views.nas</file>
            <file>Nasal/doors.nas</file>
        </c152>

		<acconfig>
			<file>Aircraft/c152/AircraftConfig/acconfig.nas</file>
		</acconfig>

        <electrical>
            <file>Nasal/electric_system.nas</file>
        </electrical>

        <garmin196>
            <file>Aircraft/c152/Models/interior/panel/instruments/garmin196/garmin196.nas</file>
        </garmin196>

    </nasal>
    
    <systems>
        <electrical>
            <battery-status type="double">100.0</battery-status>
			<outputs>
				<flaps type="double">0.0</flaps>
			</outputs>
		</electrical>
    </systems>
 
    <limits>
        <max-flap-extension-speed>
            <flaps>0.333333</flaps>
            <speed>85</speed>
        </max-flap-extension-speed>
        <max-flap-extension-speed>
            <flaps>0.666666</flaps>
            <speed>85</speed>
        </max-flap-extension-speed>
        <max-flap-extension-speed>
            <flaps>1.000</flaps>
            <speed>85</speed>
        </max-flap-extension-speed>
 
        <vne>149</vne>
 
        <max-positive-g>4.4</max-positive-g>
        <max-negative-g>-1.76</max-negative-g>

        <mass-and-balance>
            <maximum-ramp-mass-lbs>1675</maximum-ramp-mass-lbs>
            <maximum-takeoff-mass-lbs>1670</maximum-takeoff-mass-lbs>
            <maximum-landing-mass-lbs>1670</maximum-landing-mass-lbs>
        </mass-and-balance>        
    </limits>
 
    <payload>
        <weight>
            <name type="string">Pilot</name>
            <weight-lb alias="/fdm/jsbsim/inertia/pointmass-weight-lbs[0]"/>
            <min-lb type="double">0.0</min-lb>
            <max-lb type="double">300.0</max-lb>
        </weight>
        <weight>
            <name type="string">Co-Pilot</name>
            <weight-lb alias="/fdm/jsbsim/inertia/pointmass-weight-lbs[1]"/>
            <min-lb type="double">0.0</min-lb>
            <max-lb type="double">300.0</max-lb>
        </weight>
        <weight>
            <name type="string">Baggage</name>
            <weight-lb alias="/fdm/jsbsim/inertia/pointmass-weight-lbs[2]"/>
            <min-lb type="double">0.0</min-lb>
            <max-lb type="double">120.0</max-lb> <!-- WARNING: Max baggage "by the book" is 120lbs or less! -->
        </weight>
    </payload>

    <instrumentation>
        <adf>
            <volume-norm type="double">0.0</volume-norm>
            <power-btn type="bool">false</power-btn>
        </adf>
        <comm n="0">
            <volume type="double">0.0</volume>
            <power-btn type="bool">false</power-btn>
        </comm>
        <comm n="1">
            <volume type="double">0.0</volume>
            <power-btn type="bool">false</power-btn>
        </comm>
        <transponder>
            <ident_status type="int">0</ident_status>
            <ident_light type="double">0.0</ident_light>
            <ident_light_status type="int">0</ident_light_status>
            <inputs>
                <knob-mode type="int">0</knob-mode>
            </inputs>
        </transponder>
        <marker-beacon>
            <test type="int">0</test>
        </marker-beacon>
        <dme>
            <frequencies>
				<dme-selected-mhz type="double">112.0</dme-selected-mhz>
			</frequencies>
            <switch-position type="int">0</switch-position>
        </dme>
        <garmin196>
            <texture-file>Aircraft/c152/Models/interior/panel/instruments/garmin196/coque.png</texture-file>
        </garmin196>
    </instrumentation>

</PropertyList>
